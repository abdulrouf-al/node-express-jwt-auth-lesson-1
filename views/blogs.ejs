<% layout('/layouts/boilerplate') %> 



    <div class="container" dir="rtl">
        <div class="row">
            <div class="col-lg-10 mx-auto my-5">
                
                <% if (blogs.length> 0) { %>
                    <% blogs.forEach(blog=> { %>
                       <div class="d-flex mx-auto media media-hover mb-4 mb-sm-0 p-3 p-sm-5 rounded-lg font-droid align-items-center">
                            <a class="text-decoration-none text-black" href="/blogs/<%= blog._id %>">
                                <h3 class="h3 h-sm-5 mt-0 mb-4 fw-bold text-break"><%= blog.title %>  </h3>
                           
                                <p class="d-none d-sm-block text-break fs-5">
                                    <%= blog.snippet %>
                                </p> 
                            </a>
                        </div>                       
        
                         <% }) %>
                         <% } else { %>
                             <p>There are no blogs to display...</p>
                             <% } %>
            </div>
        </div>
    </div>

